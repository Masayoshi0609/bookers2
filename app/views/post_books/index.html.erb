<body>

	<div class=left>

		<div class=user-box>
		</div>

		<div class=post-box>

			<h1>New book</h1>
			<%= form_with model: @post_book, local:true do |f| %>

			  <h4>Title</h4>
			  <%= f.text_field :book_name %>
			  <h4>Opinion</h4>
			  <%= f.text_area :caption %>
			  <%= f.submit 'Create Book' %>
			<% end %>

		</div>

	<div>

	<div class=right>

		<div class=books-box>

			<% @post_books.each do |post_book| %>
				<div>
				  <%= link_to post_book_path(post_book.id) do %>
				  <p>Show</p>
				  <% end %>
				  <p>投稿ユーザー画像：</p>
				  <p>ショップ名：<%= post_book.book_name %></p>
				  <p>説明：<%= post_book.caption %></p>
				  <p>ユーザーネーム：<%= post_book.user.name %></p>
				</div>
				<%= paginate @post_books %>
			<% end %>

		</div>

	</div>

</body>