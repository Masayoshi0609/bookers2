<div class="post-body">
	<%= attachment_image_tag post_book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <p>ショップ名：<%= @post_book.book_name %></p>
  <p>説明：<%= @post_book.caption %></p>
  <p>ユーザーネーム：<%= @post_book.user.name %></p>
  <p>投稿日時：<%= @post_book.created_at.strftime('%Y/%m/%d') %></p>
   <% if @post_book.user == current_user %>
   <%= link_to "削除", post_book_path(@post_book), method: :delete %>
  <% end %>
</div>