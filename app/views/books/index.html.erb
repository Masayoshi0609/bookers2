<body>

	<div class=left>

		<div class=user-box>
		</div>

		<div class=post-box>

			<h1>New book</h1>
			<%= form_with model: @book, local:true do |f| %>

			  <h4>Title</h4>
			  <%= f.text_field :title %>
			  <h4>Opinion</h4>
			  <%= f.text_area :body %>
			  <%= f.submit 'Create Book' %>
			<% end %>

		</div>

	<div>

	<div class=right>

		<div class=books-box>

			<% @books.each do |book| %>
				<div>
				  <%= link_to book_path(book.id) do %>
				  <p>Show</p>
				  <% end %>
				  <p>投稿ユーザー画像：</p>
				  <p>ショップ名：<%= book.title %></p>
				  <p>説明：<%= book.body %></p>
				  <p>ユーザーネーム：<%= book.user.name %></p>
				</div>
				<%= paginate @books %>
			<% end %>

		</div>

	</div>

</body>