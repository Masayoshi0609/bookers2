<body>
	<main class ="mb-auto">
		<div class="container">
 			<div class="row">
 				<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
	 				<h1>Editing Book</h1>

						<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>


							<% if @book.errors.any? %>
						  <h3 class="text-danger"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
						   <ul>
						      <% @book.errors.full_messages.each do |message| %>
						        <li class="text-danger"><%= message %></li>
						      <% end %>
						   </ul>

						<% end %>

						  <p>Title</p>
						   <%= f.text_field :title, class: "form-control" %>
						  <p>Body</p>
						   <%= f.text_area :body, class: "form-control" %>

						  <p></p>

						  <div class=label>
						   <%= f.submit 'Update Book', class: "btn btn-success " %>
						  </div>

						<% end %>

						<p> <%= link_to "Show", book_path(params[:id]) %> | <%=link_to "Back", books_path %> </p>

				</div>

 			</div>
 		</div>
	</main>
</body>