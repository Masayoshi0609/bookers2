<body>

	<div class=left>

		<div class=user-box>
			
			<div class="profile-container">
			  <h3 class="profile-name"><%= @user.name %></h3>
			  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
			  <% if @user.id == current_user.id %>
    		<p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
			</div>	
			
		</div>

		<div class=post-box>

			<h1>New book</h1>
			<%= form_with model: @post_book, local:true do |f| %>

			  <h4>Title</h4>
			  <%= f.text_field :book_name %>
			  <h4>Opinion</h4>
			  <%= f.text_area :caption %>
			  <%= f.submit 'Create Book' %>
			<% end %>

		</div>

	<div>

	<div class=right>

		<div class=books-box>

			<% @post_books.each do |post_book| %>
				<div>
				  <%= link_to post_book_path(post_book.id) do %>
				  <p>Show</p>
				  <% end %>
				 
				  <p>BOOK名：<%= post_book.book_name %></p>
				  <p>説明：<%= post_book.caption %></p>
				  <p>ユーザーネーム：<%= post_book.user.name %></p>
				</div>
			<% end %>

		</div>

	</div>

</body>